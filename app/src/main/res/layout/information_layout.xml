<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.information.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/type1"
            style="@style/InformationStyle"
            android:text="头条"/>
        <Button
            android:id="@+id/type2"
            style="@style/InformationStyle"
            android:text="推荐"/>
        <Button
            android:id="@+id/type3"
            style="@style/InformationStyle"
            android:text="娱乐"/>
        <Button
            android:id="@+id/type4"
            style="@style/InformationStyle"
            android:text="科技"/>
        <Button
            android:id="@+id/type5"
            style="@style/InformationStyle"
            android:text="美女"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/InfoListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</LinearLayout>
